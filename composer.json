{
    "name": "btl-php/study-sharing",
    "description": "A web application for managing and sharing study materials",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo_mysql": "*",
        "phpmailer/phpmailer": "^6.10",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": [
                "models/",
                "controllers/"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
